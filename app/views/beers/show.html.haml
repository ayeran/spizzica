%p#notice= notice
.container_show
  .itemcell_show
    .left_column_show
      - if File.exists?(@beer.imagebeer.path(:large).to_s)
        = image_tag @beer.imagebeer.url(:large), :class => 'item_image'
      - else
        - if File.exists?(@beer.imagebeer.path(:medium).to_s)
          = image_tag @beer.imagebeer.url(:medium), :class => 'item_image'
        - else
          - if File.exists?(@beer.imagebeer.path(:small).to_s)
            = image_tag @beer.imagebeer.url(:small), :class => 'item_image'

    .right_column_show
      .itemnameview
        = @beer.name
      %p
        %b Produttore:
        = Manufacturer.find(@beer.manufacturer_id).name

      %p
        %b Aroma:
        - @beer.aromas.each do |aroma|
          = aroma.name
      %p
        %b Descrizione:
        = @beer.description

      %p
        %b Gusto:
        - @beer.tastes.each do |taste|
          = taste.name
      %p
        %b Stile:
        - @beer.beerstyles.each do |bs|
          = bs.name
      %p
        %b Colore:
        - @beer.colors.each do |color|
          = color.name
      %p
        %b Schiuma:
        - @beer.foams.each do |foam|
          = foam.name
      %p
        %b Gradazione:
        = sprintf("%02.1f %", @beer.strength)
      %p
        %b Volume:
        = sprintf("%02.0f cl", @beer.volume)
      %span{:class=>'price'}
        = sprintf("%02.2f â‚¬", @beer.price)
      - if @beer.item.available?
        .to_basket_button
          = link_to "in carrello", line_items_path(:item_id => @beer.item.id), :method=>:post
          = link_to "+1", line_items_path(:item_id => @beer.item.id), :method=>:post
          = link_to "+3", line_items_path(:item_id => @beer.item.id, :quantity=>3), :method=>:post

      - if user_signed_in?
        %br
          = link_to 'Modificare', edit_beer_path(@beer)
          \|
          = link_to 'Eliminare', @beer, :method => :delete, :data => { :confirm => 'Sei sicuro di eliminare birra ' + @beer.name + '?' }
= link_to 'Indietro', beers_path