- beerstyle=BeerStyle.find(:all)
- container=Container.find(:all)
= form_for @beer do |f|
  - if @beer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beer.errors.count, "error")} prohibited this beer from being saved:"
      %ul
        - @beer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    .field
    -beerstyle.each{|st| 
    =check_box_tag st.name, st.name
    =st.name 
    -}
  .field
    = f.label :aroma
    = f.text_field :aroma
  .field
    = f.label :flavor
    = f.number_field :flavor
  .field
    = f.label :foam
    = f.text_field :foam
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :strength
    = f.text_field :strength
    .field
    - container.each{|c|
    =check_box_tag c.name, c.name
    = c.name
    -}
  .actions
    = f.submit 'Save'
