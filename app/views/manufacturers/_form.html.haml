= form_for @manufacturer do |f|
  - if @manufacturer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manufacturer.errors.count, "error")} prohibited this manufacturer from being saved:"
      %ul
        - @manufacturer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Nome"
    = f.text_field :name
  .field
    = f.label "Paese"
    = select_tag("country", options_from_collection_for_select(Country.order("lower(name) ASC").all,:id,:name))
  .actions
    = f.submit 'Salva'
