= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :addr
    = f.text_area :addr
  .field
    = f.label :time
    = f.datetime_select :time
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :info
    = f.text_area :info
  .actions
    = f.submit 'Save'
