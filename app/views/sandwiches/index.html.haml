%h1 Listing sandwiches

%table
  %tr
    %th Name
    %th Price
    %th Ingredient
    %th
    %th
    %th

  - @sandwiches.each do |sandwich|
    %tr
      %td= link_to sandwich.name, sandwich
      %td= sandwich.price
      %td
        - sandwich.ingredients.each do |ingr|
          - if FileTest.exist?(ingr.ingredientimage.path(:small).to_s)
            = link_to image_tag(ingr.ingredientimage.url(:small), :alt=>ingr.name), ingr
          - else
            = link_to ingr.name, ingr
          -# = ingr.name
          -# = image_tag ingr.ingredientimage.url(:thumb)
      %td= link_to 'Show', sandwich
      %td= link_to 'Edit', edit_sandwich_path(sandwich)
      %td= link_to 'Destroy', sandwich, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Sandwich', new_sandwich_path
