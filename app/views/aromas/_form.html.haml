= form_for @aroma do |f|
  - if @aroma.errors.any?
    #error_explanation
      %h2= "#{pluralize(@aroma.errors.count, "error")} prohibited this aroma from being saved:"
      %ul
        - @aroma.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
