= form_for @taste do |f|
  - if @taste.errors.any?
    #error_explanation
      %h2= "#{pluralize(@taste.errors.count, "error")} prohibited this taste from being saved:"
      %ul
        - @taste.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
