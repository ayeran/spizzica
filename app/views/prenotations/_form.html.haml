= form_for @prenotation do |f|
  - if @prenotation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prenotation.errors.count, "error")} prohibited this prenotation from being saved:"
      %ul
        - @prenotation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :quantity
    = f.number_field :quantity
  .actions
    = f.submit 'Prenota ora'
