<!DOCTYPE html>
%html
  %head
    %title Spizzicaluna One - Paninoteca e birreria
    = favicon_link_tag '/spizzicaluna.ico'
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = image_tag 'yellow_star.gif', :alt => 'spizzicaluna one', :class => 'star'
    = link_to(image_tag('luna.gif', :alt => 'paninoteca e birreria', :class => 'logo'), root_path)
    .sidebar
      = link_to(image_tag('red_star.gif', :class => "tab_star")+"Brewing e Accessori",
      'bar_brewing', :class => "sidebar_brewing")
      = link_to image_tag('green_star.gif', :class => "tab_star")+"Spazio aperto", 'open', :class => 'sidebar_open'
    %ul{:class=>"nav"}
      %li= link_to 'Locale', 'bar_one'
      %li= link_to 'Birre', beers_path
      %li{:class=>"dropdown"}
        = link_to 'Food', sandwiches_path
        %ul
          %li= link_to 'Panini', sandwiches_path
          %li= link_to 'Bruschette', bruschetta_path
      %li= link_to 'Galleria', 'gallery_one'
      %li= link_to 'Consegna', 'delivery_one'
      %li= link_to 'Contatti', 'contacts_one'
      - if user_signed_in?
        %li= link_to 'Items', items_path#, :class => 'nav_button'
        %li= link_to 'Orders', orders_path#, :class => 'nav_button'
        %li= link_to 'Ingredienti', ingredients_path#, :class => 'nav_button'
        %li= link_to 'Produttori', manufacturers_path#, :class => 'nav_button'
        %li= link_to 'Paesi', countries_path#, :class => 'nav_button'
        %li= link_to 'Stili di birra', beerstyles_path#, :class => 'nav_button'
        %li= # link_to 'Contenitori', containers_path, :class => 'nav_button'
        %li= # link_to 'Tappi', lids_path, :class => 'nav_button'
        %li= # link_to 'Arome', aromas_path, :class => 'nav_button'
        %li= # link_to 'Gusti', tastes_path, :class => 'nav_button'
        %li= # link_to 'Colori', colors_path, :class => 'nav_button'
        %li= # link_to 'Schiume', foams_path, :class => 'nav_button'
    = render 'carts/small'
    %br
    = yield
    .login_logout
      -if user_signed_in?
        %p
          = link_to('Logout', destroy_user_session_path, :method=>'delete')
        %p
          You are logged in as
          = current_user.roles.map{|r| r.name}
      -else
        - if false
          %p
            Welcome, visitor!
          = link_to('Login', user_session_path, :method=>'get')
