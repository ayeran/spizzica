<!DOCTYPE html>
%html
  %head
    %title Spizzicaluna One - Paninoteca e birreria
    = favicon_link_tag '/spizzicaluna.ico'
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = image_tag 'yellow_star.png', :alt => 'spizzicaluna one', :class => 'mark'
    .logo
      = link_to(image_tag('spizzicaluna_one_icon.jpg', :alt => 'paninoteca e birreria'),root_path)
    %ul{:id=>'nav'}
      %li= link_to_unless_current 'Birre', beers_path#, :class => 'nav_button'
      %li
        = link_to_unless_current 'Food', sandwiches_path#, :class => 'nav_button'
        %ul
          %li= link_to_unless_current 'Panini', sandwiches_path#, :class => 'nav_button'
          %li= link_to_unless_current 'Bruschette', bruschetta_path#, :class => 'nav_button'
      %li= link_to_unless_current 'Consegna', 'delivery'#, :class => 'nav_button'
      %li= link_to_unless_current 'Contatti', 'contacts'#, :class => 'nav_button'
      - if user_signed_in?
        = link_to 'Items', items_path, :class => 'nav_button'
        = link_to 'Orders', orders_path, :class => 'nav_button'
        = link_to 'Ingredienti', ingredients_path, :class => 'nav_button'
        = link_to 'Produttori', manufacturers_path, :class => 'nav_button'
        = link_to 'Paesi', countries_path, :class => 'nav_button'
        = link_to 'Stili di birra', beerstyles_path, :class => 'nav_button'
        = # link_to 'Contenitori', containers_path, :class => 'nav_button'
        = # link_to 'Tappi', lids_path, :class => 'nav_button'
        = # link_to 'Arome', aromas_path, :class => 'nav_button'
        = # link_to 'Gusti', tastes_path, :class => 'nav_button'
        = # link_to 'Colori', colors_path, :class => 'nav_button'
        = # link_to 'Schiume', foams_path, :class => 'nav_button'
    = render 'carts/small'
    %br
    %br
    = yield